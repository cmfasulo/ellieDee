<div class="row">
    <div class="col-lg-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-paint-brush"></i> Drawing Tools</h3>
            </div>
            <div class="panel-body" id="dashboard">
                <div>
                    <label for="currentColor">Current Color:</label><br>
                    <input type="color" id="currentColor"/><br>
                </div>
                <button id="ledOff">Turn Off Single LED</button>
                <button id="reset">Reset Drawing</button>
                <button id="save">Save Drawing</button>
            </div>
        </div>
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-bookmark"></i> My Saved Drawings</h3>
            </div>
            <div class="table-responsive">
                <table class="table table-hover table-striped">
                  <thead>
                    <tr>
                      <th>Name</th>
                      <th colspan="1"></th>
                    </tr>
                  </thead>

                  <tbody>
                    <% if user_signed_in? %>
                      <% current_user.drawings.each do |drawing| %>
                        <tr>
                          <td><%= drawing.name %></td>
                          <td><i id="d<%= drawing.id %>" class="fa fa-play-circle"></i></td>
                          <td>
                            <%= link_to drawing, method: :delete, data: { confirm: 'Are you sure?' } do %>
                              <i class="fa fa-trash"></i>
                            <% end %>
                          </td>
                        </tr>
                      <% end %>
                    <% end %>
                  </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="col-lg-6">
        <div class="panel panel-default">
            <div class="panel-body">
                <div id="ellieDee">
          				<table id="ledMatrix"></table>
    				      <div id="logoRow">
                    <div id="logoBackground"><img id="logo" src="<%= asset_path('brickh3dTransparent.png') %>"></>
                    </div>
    				      </div>
                  <input type="hidden" id="ellieDeeId" value="<%=@drawing.id%>"/>
                  <input type="hidden" id="ellieDeeObj" value="<%=@drawing.to_json%>"/>

    			      </div>
            </div>
        </div>
    </div>
</div>
<!-- /.row -->
